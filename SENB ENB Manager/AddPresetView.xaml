                                            <materialDesign:PackIcon Kind="Plus" Foreground="{DynamicResource MaterialDesignPaper}" Width="22" Height="22"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </GroupBox.HeaderTemplate>
                            
                            <Grid Height="200">
                                <ItemsControl DataContext="{StaticResource AddPresetViewModel}" ItemsSource="{Binding testCollection}">
