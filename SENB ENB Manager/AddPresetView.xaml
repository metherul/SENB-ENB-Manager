                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </GroupBox>
                    </StackPanel>-->
                </StackPanel>
                
                
            </Grid>
        </materialDesign:DialogHost.DialogContent>
    </materialDesign:DialogHost>
</UserControl>

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    